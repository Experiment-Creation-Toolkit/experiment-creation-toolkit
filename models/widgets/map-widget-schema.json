{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "data",
        "variableName",
        "classificationMethod",
        "colorScheme"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "data": {
            "type": "string",
            "format": "uri-reference"
        },
        "variableName": {
            "type": "string"
        },
        "classificationMethod": {
            "type": "string",
            "enum": [
                "equal interval",
                "quantiles",
                "jenks"
            ]
        },
        "colorScheme": {
            "anyOf": [
                {
                    "$ref": "../types/color-scheme-schema.json"
                },
                {
                    "type": "string",
                    "format": "uri-reference"
                }
            ]
        }
    }
}