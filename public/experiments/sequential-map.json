{
    "$schema": "../../schemas/experiment.schema.json",
    "title": "Sequential Map Experiment",
    "authors": [
        {
            "firstName": "Max",
            "lastName": "Gadomski",
            "email": "max.gadomski@uni-muenster.de"
        }
    ],
    "tasks": [
        {
            "title": "Introduction",
            "widgets": [
                {
                    "type": "TEXT",
                    "properties": {
                        "text": "This experiment is about evaluating a sequential choropleth map."
                    }
                }
            ]
        },
        {
            "title": "Introductory Questions",
            "widgets": [
                {
                    "type": "INPUT",
                    "properties": {
                        "type": "TEXT",
                        "question": "How old are you?",
                        "properties": {
                            "singleLine": true,
                            "maxLength": 2,
                            "type": "text"
                        }
                    }
                },
                {
                    "type": "INPUT",
                    "properties": {
                        "type": "LIKERT",
                        "question": "How often do you use digital maps?",
                        "properties": {
                            "items": [
                                "Never", 
                                "Once a year", 
                                "Once a month", 
                                "Weekly", 
                                "Daily"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "title": "Map",
            "widgets": [
                {
                    "type": "MAP",
                    "properties": {
                        "title": "USA: National Obesity Rate By State (2015)",
                        "data": {
                            "variable": {
                                "id": "obesity",
                                "label": "Obesity",
                                "unit": "%"
                            },
                            "source": "us-states-data.json",
                            "attribution": {
                                "url": "https://catalog.data.gov/dataset/national-obesity-by-state-d765a",
                                "label": "Lake County Illinios GIS"
                            }
                        },
                        "classificationMethod": "JENKS",
                        "colorScheme": "https://colorbrewer2.org/?type=sequential&scheme=YlOrRd&n=4"
                    }
                }
            ]
        }
    ]
}