{
    "$schema": "../../../../schemas/experiment.schema.json",
    "title": "Map visualizations for uncertainty in climate projections: a questionnaire",
    "description": "This is an automatically generated experiment. It contains data from a sample dataset for demonstration purposes.",
    "authors": [
        {
            "firstName": "Max",
            "lastName": "Gadomski",
            "email": "max.gadomski@uni-muenster.de"
        }
    ],
    "measureTaskCompletionTime": true,
    "enableRestart": true,
    "tasks": [
        {
            "title": "Introduction",
            "widgets": [
                {
                    "type": "TEXT",
                    "properties": {
                        "text": "This questionnaire is part of my master's thesis for the programme Geoinformatics and Spatial Data Science at the University of Münster (DE). It was written in collaboration with 52° North GmbH and is a contribution to the I-CISK project."
                    }
                },
                {
                    "type": "TEXT",
                    "properties": {
                        "text": "The goal of this questionnaire is to find out which type of map is the most suitable for understanding the uncertainty inherent to these forecasts. We highly value your input in shaping effective climate communication!"
                    }
                },
                {
                    "type": "TEXT",
                    "properties": {
                        "heading": "Privacy and data protection statement",
                        "text": "The data collected in this questionnaire will include your responses to the questions presented. The information collected is intended solely for the purpose of research and analysis. It will not be used for any commercial, marketing, or promotional activities. We will not collect or store any personally identifiable information (PII) such as names, email addresses, or other identifying details. Your responses will remain anonymous."
                    }
                },
                {
                    "type": "TEXT",
                    "properties": {
                        "heading": "Consent",
                        "text": "Participation in this questionnaire is entirely voluntary. You are not required to provide any information if you do not wish to do so. By proceeding with this questionnaire, you consent to the collection and use of your responses as described in the privacy statement."
                    }
                },
                {
                    "type": "TEXT",
                    "properties": {
                        "heading": "Contact",
                        "text": "If you have any questions about the questionnaire or concerns about the privacy of your data, please contact me (Merel) at the following email address: <a href='mailto:m.vogel@52north.org'>m.vogel@52north.org</a>."
                    }
                }
            ]
        },
        {
            "title": "Introductory Questions",
            "widgets": [
                {
                    "type": "INPUT",
                    "properties": {
                        "question": "How old are you?",
                        "type": "TEXT",
                        "properties": {
                            "singleLine": true,
                            "maxLength": 2,
                            "type": "number"
                        }
                    }
                },
                {
                    "type": "INPUT",
                    "properties": {
                        "question": "How often do you use digital maps?",
                        "type": "LIKERT",
                        "properties": {
                            "items": [
                                "Never",
                                "Once a month or less",
                                "Several times a month",
                                "Several times a week",
                                "Daily"
                            ]
                        }
                    }
                },
                {
                    "type": "INPUT",
                    "properties": {
                        "question": "Have you heard of or seen uncertainty information in climate forecasts before this survey?",
                        "type": "LIKERT",
                        "properties": {
                            "items": [
                                "I have never heard of it.",
                                "I have heard of uncertainty information, but not seen it in forecasts",
                                "I have heard of it, but do not understand it",
                                "I understand it to some extent",
                                "I am very familiar with uncertainty information in climate forecasts"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "title": "First Map Prototype",
            "widgets": [
                {
                    "type": "TEXT",
                    "properties": {
                        "text": "Please use the map below to answer the following questions."
                    }
                },
                {
                    "type": "MAP",
                    "properties": {
                        "title": "USA: National Obesity Rate By State 2015 (3 classes, equal interval)",
                        "data": {
                            "source": "LakeCounty_Health_NationalObesityByState_2015.json",
                            "variable": {
                                "id": "Obesity",
                                "unit": "%"
                            },
                            "attribution": {
                                "url": "https://catalog.data.gov/dataset/national-obesity-by-state-2094c",
                                "label": "Lake County Illinois GIS"
                            }
                        },
                        "classificationMethod": "EQUAL_INTERVAL",
                        "colorScheme": "https://colorbrewer2.org/?type=sequential&scheme=OrRd&n=3"
                    }
                }
            ]
        },
        {
            "title": "Comparison of Two Map Prototypes",
            "widgets": [
                {
                    "type": "TEXT",
                    "properties": {
                        "text": "Please use the two maps below to answer the following questions."
                    }
                },
                {
                    "type": "MAP",
                    "properties": {
                        "title": "USA: National Obesity Rate By State 2015 (5 classes, equal interval)",
                        "data": {
                            "source": "LakeCounty_Health_NationalObesityByState_2015.json",
                            "variable": {
                                "id": "Obesity",
                                "unit": "%"
                            },
                            "attribution": {
                                "url": "https://catalog.data.gov/dataset/national-obesity-by-state-2094c",
                                "label": "Lake County Illinois GIS"
                            }
                        },
                        "classificationMethod": "EQUAL_INTERVAL",
                        "colorScheme": "https://colorbrewer2.org/?type=sequential&scheme=OrRd&n=5"
                    }
                },
                {
                    "type": "MAP",
                    "properties": {
                        "title": "USA: National Obesity Rate By State 2015 (5 classes, jenks)",
                        "data": {
                            "source": "LakeCounty_Health_NationalObesityByState_2015.json",
                            "variable": {
                                "id": "Obesity",
                                "unit": "%"
                            },
                            "attribution": {
                                "url": "https://catalog.data.gov/dataset/national-obesity-by-state-2094c",
                                "label": "Lake County Illinois GIS"
                            }
                        },
                        "classificationMethod": "JENKS",
                        "colorScheme": "https://colorbrewer2.org/?type=sequential&scheme=OrRd&n=3"
                    }
                }
            ]
        },
        {
            "title": "Feedback",
            "widgets": [
                {
                    "type": "INPUT",
                    "properties": {
                        "type": "TEXT",
                        "question": "Do you have any feedback?",
                        "properties": {
                            "singleLine": false,
                            "maxLength": 100
                        }
                    }
                }
            ]
        }
    ]
}