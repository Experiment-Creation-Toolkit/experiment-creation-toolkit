{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "type",
        "properties"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri-reference"
        },
        "type": {
            "type": "string",
            "enum": [
                "text",
                "input",
                "map"
            ]
        },
        "properties": {
            "type": "object"
        }
    },
    "if": {
        "properties": {
            "type": {
                "const": "text"
            }
        }
    },
    "then": {
        "properties": {
            "properties": {
                "$ref": "./widgets/text-widget-schema.json"
            }
        }
    },
    "else": {
        "if": {
            "properties": {
                "type": {
                    "const": "input"
                }
            }
        },
        "then": {
            "properties": {
                "properties": {
                    "$ref": "./widgets/input-widget-schema.json"
                }
            }
        },
        "else": {
            "properties": {
                "properties": {
                    "$ref": "./widgets/map-widget-schema.json"
                }
            }
        }
    }
}