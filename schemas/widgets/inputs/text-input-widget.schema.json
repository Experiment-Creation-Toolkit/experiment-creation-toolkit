{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "singleLine"
    ],
    "additionalProperties": false,
    "properties": {
        "singleLine": {
            "type": "boolean"
        },
        "minLength": {
            "type": "integer",
            "minimum": 0
        },
        "maxLength": {
            "type": "integer",
            "minimum": 1
        },
        "type": {
            "type": "string",
            "enum": [
                "text",
                "number"
            ]
        }
    }
}