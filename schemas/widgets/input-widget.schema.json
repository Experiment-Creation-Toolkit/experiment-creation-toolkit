{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "question",
        "type"
    ],
    "additionalProperties": false,
    "properties": {
        "question": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "text",
                "likert"
            ]
        },
        "properties": {
            "type": "object"
        },
        "if": {
            "properties": {
                "type": {
                    "const": "text"
                }
            }
        },
        "then": {
            "properties": {
                "properties": {
                    "$ref": "./inputs/text-input-widget.schema.json"
                }
            }
        },
        "else": {
            "properties": {
                "properties": {
                    "$ref": "./inputs/likert-input-widget.schema.json"
                }
            }
        }
    }
}