{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "data",
        "variable",
        "classificationMethod",
        "colorScheme"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "attribution": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "label": {
                            "type": "string"
                        }
                    },
                    "required": ["url", "label"]
                }
            },
            "required": ["source"]
        },
        "variable": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        },
        "numberOfClasses": {
            "type": "integer"
        },
        "classificationMethod": {
            "type": "string",
            "enum": [
                "equal interval",
                "quantiles",
                "jenks"
            ]
        },
        "colorScheme": {
            "type": "string"
        }
    }
}